= simple_format squat.address, {}, wrapper_tag: "address"

= simple_format squat.body, class: :body

- if squat.link
  = link_to squat.link, squat.link, class: :link, target: '_blank'

.periods
  %h5= t(:squat_period)
  - squat.periods.each do |p|
    .period
      = simple_format p.to_s

-unless squat.tags.blank?
  .tags
    %h5= t(:tags)
    %ul
      - squat.tags.try(:each) do |tag|
        %li= t(tag.to_sym)
