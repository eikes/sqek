%nav.navbar.navbar-default.navbar-static-top#header
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{ type: "button", data: {toggle: "collapse", target:"#main-nav-inner" } }
        %span.sr-only
          Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Squatting Europe Kollective", root_path, class: "navbar-brand"
    .collapse.navbar-collapse#main-nav-inner
      %ul.nav.navbar-nav
        %li.dropdown
          %a.dropdown-toggle{ href:"#", "data-toggle" => "dropdown", role: "button", "aria-expanded" => "false" }
            = City.model_name.human(:count => 2)
            %span.caret
          %ul.dropdown-menu{ role: "menu" }
            %li= link_to t(:menu_cities), root_path
            %li.divider
            - City.by_name.each do |city|
              %li= link_to ( city.name + " (" + city.squats.count.to_s + ")" ), city_squats_path(city)
        - if can? :create, City
          %li= link_to t(:new_city), new_city_path
        - if @city.present? and !@city.id.nil? and can? :create, Squat
          %li= link_to t(:new_squat), new_city_squat_path(@city)
          %li.dropdown
            %a.dropdown-toggle{ href:"#", "data-toggle" => "dropdown", role: "button", "aria-expanded" => "false" }
              = Picture.model_name.human(:count => 2)
              %span.caret
            %ul.dropdown-menu{ role: "menu" }
              %li= link_to "All Pictures", city_pictures_path(@city)
              %li.divider
              %li= link_to "Upload Picture", new_city_picture_path       
      %ul.nav.navbar-nav.navbar-right
        - if content_for?(:menu_right)
          = yield(:menu_right)
        - I18n.available_locales.each do |l|
          %li{ class: (l.to_s + " language-selector") }
            = link_to l, locale: l
        - if user_signed_in?
          %li
            = link_to t(:account), edit_user_registration_path
          %li
            = link_to 'Logout', destroy_user_session_path, :method => :delete
        - else
          %li
            = link_to 'Login', new_user_session_path