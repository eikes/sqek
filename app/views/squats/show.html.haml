%h1= @squat.name

#map{ data: { squats_url: city_squat_url(@city, @squat, format: :json), mode: :show, latlng: @squat.latlng, zoom: 14 } }

%p= simple_format @squat.address

%p= simple_format @squat.body

#periods
  %b
    = t(:squat_period)
  - @squat.periods.each do |p|
    .period
      = p

.btn-group
  - if can? :update, @squat
    = link_to t(:edit), edit_city_squat_path(@city, @squat), class: "btn btn-default"

  = link_to t(:back_to_city), city_squats_path(@city), class: "btn btn-default"
