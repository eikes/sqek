= simple_format squat.address, {}, wrapper_tag: "address" if squat.address != squat.name

.body= sanitize squat.body

- if squat.link
  = link_to squat.link, squat.link, class: :link, target: '_blank'

.periods
  %h5= t(:squat_period)
  - squat.periods.each do |p|
    .period
      = simple_format p.to_s

-unless squat.tags.blank?
  .tags
    %h5= t(:tags)
    %ul
      - squat.tags.try(:each) do |tag|
        %li= t(tag.to_sym)

-unless squat.pictures.blank?
  .pictures
    %h5= t(:pictures)
    - squat.pictures.each do |picture|
      %figure.picture
        = link_to(picture.picture_url, data: { lightbox: 'picture', title: picture.title }) do
          = image_tag(picture.picture_url(:thumb), size: '95x95')
        %figcaption
          = can?(:update, Picture) ? link_to(picture.title, city_picture_path(squat.city, picture)) : picture.title
  - if can? :create, Picture
    = link_to t(:upload_pictures), new_city_picture_path(squat.city, squat_id: squat.id), class: "btn btn-default"
