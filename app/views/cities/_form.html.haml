= simple_form_for(@city) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :body

    - if @city.id?
      #map{ data: { mode: :edit, latlng: @city.latlng, zoom: 8 } }
    - else
      #map{ data: { mode: :create, latlng: [47, 11], zoom: 4 } }

    = f.input :lat, wrapper_html: {class: "hide"}
    = f.input :lng, wrapper_html: {class: "hide"}

  .form-actions
    = f.button :submit
    - if @city.id?
      = link_to 'Destroy', @city, :method => :delete, :data => { :confirm => 'Are you sure?' }
      = link_to 'Show', @city
    = link_to 'Back', cities_path